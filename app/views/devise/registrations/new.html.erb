<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true, label: false, placeholder: 'Name' %>
    <%= f.input :company_name, required: true, label: false, placeholder: 'Company name' %>
    <%= f.input :email, required: true, label: false, placeholder: 'Email' %>
    <%= f.input :phone, required: true, label: false, placeholder: 'Phone number' %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                label: false, placeholder: 'Password'%>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: 'Password confirmation' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
