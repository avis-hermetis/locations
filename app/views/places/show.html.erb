<div class="row">

  <div class="col-md-3">
    <h3><%= @place.name %></h3>

  <p>
    <strong>Set: </strong>
    <%= @place.set %>
  </p>
  <p>
    <strong>Adress: </strong>
    <%= @place.adress %><br>
    <%= @place.latitude.to_s + ", " + @place.latitude.to_s %>
  </p>
  <p>
    <strong>Description: </strong>
    <%= @place.description %>
  </p>
  <div id="map" style="width: 240px; height:240px"></div>

  </div>

  <div class="col-md-9">
    <h3>Reviews</h3>
  </div>

</div>



<script type="text/javascript">
  var map;
  var myCenter = {lat: <%= @place.latitude %>, lng: <%= @place.longitude %>};

  function initMap() {
    map = new google.maps.Map(document.getElementById('map'), {
      center: myCenter,
      zoom: 13
    });
    var marker = new google.maps.Marker({
      position: myCenter,
      map: map
    });
  }
</script>


